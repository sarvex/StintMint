<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="6dp">

  <android.support.v7.widget.CardView
    android:id="@+id/stint_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

      <ImageView
        android:id="@+id/stint_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"/>

      <TextView
        android:id="@+id/stint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/stint_photo"
        android:textSize="30sp"/>

      <TextView
        android:id="@+id/stint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stint_name"
        android:layout_toEndOf="@id/stint_photo"/>

      <TextView
        android:id="@+id/stint_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stint_description"
        android:layout_toEndOf="@id/stint_photo"/>

      <TextView
        android:id="@+id/stint_days_left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stint_description"
        android:layout_toEndOf="@id/stint_days_left"/>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>
